- var siteName = '2016 Debate Bingo';

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{siteName}
    // Disable tap highlight on IE
    meta(name='msapplication-tap-highlight', content='no')
    // Web Application Manifest
    link(rel='manifest', href='manifest.json')
    // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable', content='yes')
    meta(name='application-name', content=siteName)
    link(rel='icon', sizes='192x192', href='/img/touch/chrome-touch-icon-192x192.png')
    // Add to homescreen for Safari on iOS
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='Web Starter Kit')
    link(rel='apple-touch-icon', href='/img/touch/apple-touch-icon.png')
    // Tile icon for Win8 (144x144 + tile color)
    meta(name='msapplication-TileImage', content='/img/touch/ms-touch-icon-144x144-precomposed.png')
    meta(name='msapplication-TileColor', content='#2F3BA2')
    // Color the status bar on mobile devices
    meta(name='theme-color', content='#2F3BA2')
    link(href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400|Roboto:400,900', rel='stylesheet', type='text/css')
    link(href='/css/main.css', rel='stylesheet', type='text/css')
  body
    header.page-header
      h1 2016 Presidential Debate Bingo
      nav.page-nav
        ul.inline-list
          li
            a(href='https://www.hillaryclinton.com/donate/', data-tip='Donate').btn.tip
              i.fa.fa-dollar(aria-hidden='true')
              span.sr-only Donate
          li
            button.btn.tip(data-tip='About')
              i.fa.fa-question(aria-hidden='true')
              span.sr-only About
          li
            button.btn.refresh-all.tip(data-tip='Refresh Cards')
              i.fa.fa-refresh(aria-hidden='true')
              span.sr-only Refresh all
          li
            button.btn.print.tip(data-tip='Print')
              i.fa.fa-print(aria-hidden='true')
              span.sr-only Print
    main.page-content
      .card-panel
        .card.dems
          header.card-header
            h2.card-title Clinton
            .card-controls
              button.card-reset.btn.tip(data-tip='Clear', disabled)
                i.fa.fa-undo(aria-hidden='true')
                span.sr-only Clear
              button.card-refresh.btn.tip(data-tip='Refresh')
                i.fa.fa-refresh(aria-hidden='true')
                span.sr-only Refresh
          #dem-card.card-body
      .card-panel
        .card.repubs
          header.card-header
            h2.card-title Trump
            .card-controls
              button.card-reset.btn.tip(data-tip='Clear', disabled)
                i.fa.fa-undo(aria-hidden='true')
                span.sr-only Clear
              button.card-refresh.btn.tip(data-tip='Refresh')
                i.fa.fa-refresh(aria-hidden='true')
                span.sr-only Refresh
          #gop-card.card-body
    footer.page-footer
      nav.share-nav
        ul.inline-list
          li
            | Share
          li
            a(href='#', data-tip='Tweet', data-mode='top').btn.share-btn.tip
              i.fa.fa-twitter
              span.sr-only Twitter
          li
            a(href='#', data-tip='Share', data-mode='top').btn.share-btn.tip
              i.fa.fa-facebook
              span.sr-only Facebook
          li
            a(href='#', data-tip='Share', data-mode='top').btn.share-btn.tip
              i.fa.fa-google-plus
              span.sr-only Google+

    script(src='https://use.fontawesome.com/159a9047f0.js')
    script(src='/js/main.min.js')
