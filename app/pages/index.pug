- var siteName = 'Political Bingo';
- var metaDesc = `Make the presidential debates fun with these bingo cards covering Donald Trump and Hillary Clinton's favorite topics. Drinking optional!`;

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(property='og:site_name', content=siteName)
    meta(name='description', content=metaDesc)
    meta(property='og:description' content=metaDesc)
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(property='og:image', content='')
    title #{siteName}
    // Disable tap highlight on IE
    meta(name='msapplication-tap-highlight', content='no')

    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16")
    link(rel="manifest", href="/manifest.json")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#00a9e0")
    meta(name="theme-color", content="#ffffff")

    script(src='https://use.fontawesome.com/159a9047f0.js')
    link(href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400|Roboto:400,900', rel='stylesheet', type='text/css')
    link(href='/css/main.css', rel='stylesheet', type='text/css')
  body
    header.page-header
      h1 2016 Presidential Debate Bingo
      nav.page-nav
        ul.inline-list
          li
            a(href='https://www.hillaryclinton.com/donate/', target='_blank', data-tip='Donate').btn.btn-icon.tip
              i.fa.fa-dollar(aria-hidden='true')
              span.sr-only Donate to Hillary
          li
            button.btn.btn-icon.tip(data-tip='About')
              i.fa.fa-question(aria-hidden='true')
              span.sr-only About
          li
            button.btn.btn-icon.refresh-all.tip(data-tip='Refresh Cards')
              i.fa.fa-refresh(aria-hidden='true')
              span.sr-only Refresh
          li
            button.btn.btn-icon.print.tip(data-tip='Print')
              i.fa.fa-print(aria-hidden='true')
              span.sr-only Print
    main.page-content
      .card-panel
        .card.dems
          header.card-header
            h2.card-title Clinton
            .card-controls
              button.card-reset.btn.btn-icon.btn-inverted.tip(data-tip='Clear', disabled)
                i.fa.fa-undo(aria-hidden='true')
                span.sr-only Clear
              button.card-refresh.btn.btn-icon.btn-inverted.tip(data-tip='Refresh')
                i.fa.fa-refresh(aria-hidden='true')
                span.sr-only Refresh
          #dem-card.card-body
      .card-panel
        .card.repubs
          header.card-header
            h2.card-title Trump
            .card-controls
              button.card-reset.btn.btn-icon.btn-inverted.tip(data-tip='Clear', disabled)
                i.fa.fa-undo(aria-hidden='true')
                span.sr-only Clear
              button.card-refresh.btn.btn-icon.btn-inverted.tip(data-tip='Refresh')
                i.fa.fa-refresh(aria-hidden='true')
                span.sr-only Refresh
          #gop-card.card-body
    footer.page-footer
      nav.share-nav
        ul.inline-list
          li
            | Share
          li
            a(href='#', data-tip='Tweet', data-mode='top').btn.btn-icon.share-btn.tip
              i.fa.fa-twitter(aria-hidden='true')
              span.sr-only Twitter
          li
            a(href='#', data-tip='Share', data-mode='top').btn.btn-icon.share-btn.tip
              i.fa.fa-facebook(aria-hidden='true')
              span.sr-only Facebook
          li
            a(href='#', data-tip='Share', data-mode='top').btn.btn-icon.share-btn.tip
              i.fa.fa-google-plus(aria-hidden='true')
              span.sr-only Google+
    #cta(aria-hidden='true').dialog.cta-dialog
      button.close-cta.btn-close.btn.btn-inverted.btn-icon
        i.fa.fa-close(aria-hidden='true')
        span.sr-only Close
      .message
      .cta-controls
        a(href='https://www.hillaryclinton.com/donate/', target='_blank', data-tip='Donate').btn.btn-inverted.btn-large.tip.close-cta Donate to Hillary
        button.btn.btn-inverted.btn-large.refresh-all.close-cta Play Again
    script(src='/js/main.min.js')
